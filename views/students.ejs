<!-- views/students.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Rao Tutorials</title>
  <link rel="icon" type="image/png" href="/RT logo.png"/>
  <style>
    body{
      font-family: Verdana, sans-serif;
    }

    h1 {
      text-align: center;
    }

    h2 {
      margin-left: 580px; 
      font-size: x-small;
    }

    table {
      border-collapse: collapse;
      width: 100%;
    }
    
    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }
    
    tr:nth-child(even) {
      background-color: #dddddd;
    }

    #searchbar{
     margin-left: 34%;
     padding:15px;
    }
 
    input[type=text] {
      width: 30%;
    }
  </style>
</head>
<body>
  <img src="/RT logo.png" class="logo" alt="Logo" width="100px">
  <h1>Search Student Data</h1>
  <form id="search" action="/StudentSearch">
    <input id="searchbar"  type="text" name="search" placeholder="Search students...">
  </form>
  <h2>* Use First Name or Middle Name or Last Name</h2>
  <h1>Student Data</h1>
  <table>
    <thead>
      <tr>
        <th>Student ID</th>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Last Name</th>
        <th>Date of Birth</th>
        <th>Standard</th>
        <th>Batch</th>
        <th>Contact</th>
      </tr>
    </thead>
    <tbody>
        <% students.forEach(student => { %>
            <tr>
              <td><%= student.studentid %></td>
              <td><%= student.firstname %></td>
              <td><%= student.middlename %></td>
              <td><%= student.lastname %></td>
              <td><%= student.dob %></td>
              <td><%= student.std %></td>
              <td><%= student.batch %></td>
              <td><%= student.contact %></td>
            </tr>
          <% }); %>
    </tbody>
  </table>
</body>
</html>