<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Rao Tutorials</title>
  <link rel="icon" type="image/png" href="/RT logo.png"/>
  <style>
    body{
      font-family: Verdana, sans-serif;
    }
    h1 {
      text-align: center;
    }
    table {
      border-collapse: collapse;
      width: 100%;
    }
    
    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }
    
    tr:nth-child(even) {
      background-color: #dddddd;
    }

    #searchbar{
     margin-left: 34%;
     padding:15px;
    }

    input[type=text] {
      width: 30%;
    }

    h2 {
      margin-left: 650px; 
      font-size: x-small;
    }    
  </style>
</head>
<body>
  <img src="/RT logo.png" class="logo" alt="Logo" width="100px">
  <h1>Search Exam Data</h1>
  <form id="search" action="/ExamSearch">
    <input id="searchbar"  type="text" name="search" placeholder="Search Exams...">
  </form>  
  <h2>* Use Subject Name or Exam Date</h2>
  <h1>Exam Schedule</h1>
  <table>
    <thead>
      <tr>
        <th>Batch</th>
        <th>Subject Name</th>
        <th>Date</th>
        <th>From</th>
        <th>To</th>
      </tr>
    </thead>
    <tbody>
        <% exams.forEach(exam => { %>
            <tr>
              <td><%= exam.batch %></td>
              <td><%= exam.subname %></td>
              <td><%= exam.date %></td>
              <td><%= exam.fromtime %></td>
              <td><%= exam.totime %></td>
            </tr>
          <% }); %>
    </tbody>
  </table>
</body>
</html>